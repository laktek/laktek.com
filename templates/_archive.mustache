<div id="main-content" class="expanded">
	<h2>Archive</h2> 
	<h3>By <a href="#" rel="years" class="filter_selector active">Year</a> / <a href="#" class="filter_selector" rel="tags">Tag</a></h3>

	<menu class="filter">
		<div role="control"><a href="#" rel="prev">&lt;</a></div>

		<ul class="filters" id="filter_years"> 
			<li class="any"><a href="/archive">Any</a></li>
			{{#years}}
				<li><a href="/{{.}}" class="{{#current}}{{.}}{{/current}}">{{.}}</a></li>
			{{/years}}
		</ul>

		<ul class="filters hide" id="filter_tags">
			<li class="any"><a href="/archive">Any</a></li>
			{{#top_tags}}
				<li><a href="/tag/{{#downcase}}{{.}}{{/downcase}}" class="{{#current}}/tag/{{#downcase}}{{.}}{{/downcase}}{{/current}}">{{.}}</a></li>
			{{/top_tags}}
		</ul>

		<div role="control"><a href="#" rel="next">&gt;</a></div>
	</menu>

	<div class="posts" role="archive">
		<ul>
			{{#posts}}
			<li>
				<a href="{{ permalink }}">{{{ title }}}</a>
				<time class="updated" datetime="{{ published_date }}" pubdate>{{#short_date}}{{published_date}}{{/short_date}}</time>
			</li>
			{{/posts}}
		</ul>
	</div>

</div>
